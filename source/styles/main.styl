@import 'vendor/normalize.css'
$fontColor = #FC177E
body
  font-family 'Lobster Two', cursive
  line-height 120%
  color $fontColor
  font-size 18px
  background-color white
  main
    text-align center
    h1
      margin-top 100px
      font-size 2.66rem
    p
      margin-top 100px
      font-family 'Open Sans', sans-serif
      color #4A4A4A
    form
      margin-top 100px
      button,input
        border 1px solid  #C2196A
        height 45px
        font-size 1rem
        display inline-block
        vertical-align top
      button
        background-color $fontColor
        color white
        height 49px
        padding-left 20px
        padding-right 20px
      input
        border-radius 8px 0 0 8px
        padding-left 10px
